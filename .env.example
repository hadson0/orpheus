# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=generate-a-strong-random-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///spotify_voice_bridge.db

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:5000/auth/callback
SPOTIFY_SCOPE=user-read-playback-state user-modify-playback-state user-read-currently-playing playlist-read-private playlist-read-collaborative playlist-modify-public playlist-modify-private user-read-private user-read-email user-library-read user-library-modify streaming app-remote-control user-follow-read user-follow-modify

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Encryption Configuration
FIELD_ENCRYPTION_KEY=generate-a-fernet-key-and-paste-here

# SQLite Performance Tuning
SQLITE_TIMEOUT=15
SQLITE_JOURNAL_MODE=WAL

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Optional: CORS Configuration
CORS_ORIGINS=http://127.0.0.1:3000

# Optional: Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour

# Optional: Gunicorn Production Settings
WORKERS=4
BIND_ADDRESS=0.0.0.0:8000

# Optional: State Storage TTL (seconds)
AUTH_STATE_TTL=300